{
  "name": "mt-events",
  "version": "1.0.2",
  "description": "Make mobile events user-friendly.",
  "main": "lib/index-npm.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "npm run build:browser &&  npm run build:npm && webpack",
    "build:browser": "rollup --config --platform Browser",
    "build:npm": "rollup --config --platform npm",
    "jsdoc": "jsdoc ./core/ -d ./docs",
    "lint": "eslint core/*.js --fix",
    "precommit": "npm run jsdoc && npm run test && lint-staged "
  },
  "lint-staged": {
    "core/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*": [
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jerryOnlyZRJ/mobile-events.git"
  },
  "keywords": [
    "mobile",
    "events"
  ],
  "author": "ranjayzheng",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jerryOnlyZRJ/mobile-events/issues"
  },
  "homepage": "https://github.com/jerryOnlyZRJ/mobile-events#readme",
  "devDependencies": {
    "args-parser": "^1.1.0",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "rollup": "^0.63.5",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-replace": "^2.0.0",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0"
  }
}